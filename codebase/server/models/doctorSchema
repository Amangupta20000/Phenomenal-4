const mongoose = require("mongoose");

const doctorSchema = new mongoose.Schema({
  userId: {
    type: String,
    required: true,
    unique: true
  },
  name: {
    type: String,
    required: true,
    trim: true
  },
  phoneNo: {
    type: String,
    required: true,
    unique: true,
    validate: {
      validator: function(v) {
        return /\d{10}/.test(v);
      },
      message: props => `${props.value} is not a valid phone number!`
    }
  },
  email: {
    type: String,
    required: true,
    lowercase: true,
    unique: true
  },
  profilePic: {
    data: Buffer, 
    contentType: String,
  },
  clinicAddress: {
    type: String,
    required: true,
  },
  pinCode: {
    type: Number,
    min: [100000, "Zip code too short"],
    max: 999999
  },
  clinicTime: {
    startTime: {
      type: mongoose.Schema.Types.Long, 
      required: true,
    },
    endTime: {
      type: mongoose.Schema.Types.Long,
      required: true,
    }
  },
  degree: {
    type: String,
    required: true,
  },
  spec: {
    type: String,
  },
  status: {
    type: Boolean
  },
  LastAppointment: {
    type: mongoose.Schema.Types.Long,
    required: true,
  },
  password: {
    type: String, 
    required: true
  }
}, {
  timestamps: true
});

module.exports = mongoose.model("Doctor", doctorSchema);